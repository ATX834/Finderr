{% extends 'base.html.twig' %}

{% block body %}
	<div>
		<div class="container">
			<div class="row">
				{% for user in users|slice(0, 28)%}
					{% set picture = random(pictures)%}
					<div class="col-md-3 col-sm-12 mx-auto m-3">
						<div class="card col-3" style="width: 18rem;">
							<img src={{picture}} class="card-img-top" style='max-height:180px; min-height:180px' alt="...">
							<div class="card-body">
								<h6 class="card-title">
                                <img src={{picture}}  style='height:16px; width:16px;' alt="..." class="rounded-circle">
                                {{ user.firstname }}
									{{ user.lastname }}</h6>
								<p class="mb-2">
								  {{user.mainCategory}} is my field of expertise, please contact me for any
						   		{{user.subCategory}} support on your project!
								</p>
								<p style="font-size:14px; vertical-align: middle;">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill text-warning pb-1" viewbox="0 0 16 16">
										<path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
									</svg>
									<span class="text-warning fw-bold">
										{{ random(2,5) }}
									</span>
									<span class="fw-lighter ">
										({{ random(8,200) }})
									</span>
								</p>
							</div>
							<ul class="list-group list-group-flush">
								<li class="list-group-item text-secondary">
                                <span>
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-suit-heart-fill" viewbox="0 0 16 16">
										<path d="M4 1c2.21 0 4 1.755 4 3.92C8 2.755 9.79 1 12 1s4 1.755 4 3.92c0 3.263-3.234 4.414-7.608 9.608a.513.513 0 0 1-.784 0C3.234 9.334 0 8.183 0 4.92 0 2.755 1.79 1 4 1z"/>
									</svg>
                                </span>
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <span style="font-size:12px;">
                                STARTING AT 
                                </span>
                                <span style="font-size:20px;">
                                ${{ user.hourlyrate}}
                                </span>
								</li>
							</ul>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
